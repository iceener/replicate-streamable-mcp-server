# Replicate MCP Server - Environment Configuration
# Copy to .env and configure

# Server
PORT=3000
HOST=127.0.0.1
NODE_ENV=development

# MCP Protocol
MCP_TITLE="Replicate"
MCP_VERSION=1.0.0

# Authentication - internal API key to access this MCP server
# Generate with: openssl rand -hex 32
# Client must send this via Authorization: Bearer <key> or X-Api-Key header
API_KEY=

# Replicate API Token (stored server-side, never sent by client)
# Get from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=

# Logging
LOG_LEVEL=info
